generator client {
    provider = "prisma-client-js"
    output   = "../generated/signer"
}

datasource db {
    provider = "postgresql"
    url      = env("SIGNER_DATABASE_URL")
}

model Signer {
    fid         String
    publicKey   String
    privateKey  String
    token       String?
    deeplinkUrl String?
    state       String?

    createdAt DateTime @default(now())
    updatedAt DateTime @default(now()) @updatedAt

    @@id([fid, publicKey])
}

model SignerPending {
    address    String
    publicKey  String
    privateKey String

    signature      String
    deadline       Int
    requestFid     String
    requestAddress String

    createdAt DateTime @default(now())
    updatedAt DateTime @default(now()) @updatedAt

    @@id([address, publicKey])
}
